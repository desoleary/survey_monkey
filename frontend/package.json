{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "PORT=3001 react-app-rewired start",
        "build": "react-app-rewired build && cp -r build/* ../public/",
        "build-storybook": "build-storybook -s public",
        "cypress": "yarn run concurrently 'wait-on http://localhost:3001 --reverse && yarn run start' 'cypress open'",
        "eject": "react-scripts eject",
        "jest": "npx jest --testTimeout 3000 --cache  --colors",
        "package-json:format": "npx sort-package-json",
        "prettier": "npx prettier -l src/**/*/*.{ts,tsx,css}",
        "storybook": "start-storybook -p 6006 -s public",
        "test": "cross-env CI=true react-app-rewired test --env=jsdom --cache --color --testTimeout 3000 --testPathIgnorePatterns='/__tests__/.*.stories.ts'",
        "tslint": "tslint 'src/**/*.{ts,tsx}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.test.{js,jsx}": [
            "yarn run jest --findRelatedTests --coverage"
        ],
        "src/**/*.{ts,tsx,json,md}": [
            "yarn run prettier --write",
            "git add",
            "yarn run tslint --fix",
            "git add"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "dependencies": {
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^6.1.0",
        "history": "^5.0.0",
        "html-webpack-plugin": "^4.5.2",
        "lodash-es": "^4.17.21",
        "mini-css-extract-plugin": "^2.2.0",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-redux": "^7.2.4",
        "react-router": "^5.2.0",
        "react-scripts": "3.4.4",
        "redux": "^4.1.1",
        "redux-devtools-extension": "^2.13.9",
        "redux-saga": "^1.1.3",
        "redux-thunk": "^2.3.0",
        "styled-components": "^5.3.0",
        "wix-style-react": "^9.144.0"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-typescript": "^7.15.0",
        "@storybook/addon-actions": "^6.3.6",
        "@storybook/addon-essentials": "^6.0.21",
        "@storybook/addon-links": "^6.0.21",
        "@storybook/node-logger": "^6.0.21",
        "@storybook/preset-create-react-app": "^3.1.4",
        "@storybook/react": "^6.0.21",
        "@stylable/jest": "^3.12.4",
        "@stylable/webpack-plugin": "^3.12.4",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.0.0",
        "@testing-library/user-event": "^13.2.1",
        "@types/cypress": "^1.1.3",
        "@types/jest": "^26.0.24",
        "@types/jsdom": "^16.2.13",
        "@types/node": "^12.0.0",
        "@types/react": "^16.14.11",
        "@types/react-dom": "^16.9.14",
        "@types/react-redux": "^7.1.18",
        "@types/redux-saga": "^0.10.5",
        "@types/redux-thunk": "^2.1.0",
        "babel-loader": "^8.2.2",
        "concurrently": "^6.2.0",
        "cross-env": "^7.0.3",
        "cypress": "^8.2.0",
        "global": "^4.4.0",
        "husky": ">=4",
        "identity-obj-proxy": "^3.0.0",
        "jest-extended": "^0.11.5",
        "jsdom": "^16.7.0",
        "lint-staged": ">=10",
        "node-sass": "^4.14.1",
        "prettier": "^2.3.2",
        "react-app-rewired": "^2.1.8",
        "react-is": "^16.13.1",
        "ts-jest": "^27.0.4",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^5.0.0",
        "typescript": "^3.9.4",
        "typescript-tslint-plugin": "^0.5.5",
        "wait-on": "^5.3.0",
        "wix-ui-test-utils": "^1.0.182"
    }
}
